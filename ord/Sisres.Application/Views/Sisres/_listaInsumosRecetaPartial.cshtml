@{
    WebGrid wgInsumos = new WebGrid(ViewBag.listaInsumosReceta, rowsPerPage: 100);
}

@wgInsumos.GetHtml(tableStyle: "tables ListaDetalle", headerStyle: "webgrid-header", footerStyle: "webgrid-footer", alternatingRowStyle: "webgrid-alternating-row", selectedRowStyle: "webgrid-selected-row",
rowStyle: "webgrid-row-style",
            columns: wgInsumos.Columns(
            wgInsumos.Column("IdInsumo", header: "Codigo", canSort: false),
            wgInsumos.Column("Insumos.NombreInsumo", header: "Nombre", canSort: false),
            wgInsumos.Column("Insumos.tb_UnidadMedida.DesMed", header: "UM", canSort: false),
            wgInsumos.Column("Cantidad", header: "Cantidad", canSort: false)
            ), htmlAttributes: new { @style = "width:100%;" })

@{ Layout = null; }